// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgres"
  url      = env("DATABASE_URL")
}

model User {
  id Int @id @default(autoincrement())
  firstName String
  lastname String 
  phone String
  role String
  createAt DateTime @default(now())
  updateAt DateTime @default(now())
  accounts Account[]
}

model Account {
  id Int @id @unique
  balance Float
  createAt DateTime @default(now())
  updateAt DateTime @default(now())
  transactions Transaction[]
  usersId  Int
  userss  User   @relation(fields: [usersId], references: [id])

}

model Transaction {
  id Int @id @default(autoincrement())
  amount Float
  date DateTime @default(now())
  isValidate Boolean @default(false)
  accountsId  Int
  acounts   Account    @relation(fields: [accountsId], references: [id])

}


